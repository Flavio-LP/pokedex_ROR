
<h1> Pokemons </h1>

<div  class="pokedex-container">

    <% @pokedex.each do |pokemon| %>
        <div class="pokemon-card">
            <h2> <%= pokemon[:name] %> </h2>   
            <p> <%= pokemon[:height] %> </p>
            <p> <%= pokemon[:weight] %> </p>
            <p> <%= pokemon[:types] %> </p>
            <img src= <%= pokemon[:sprites] %> </img>
        </div>
    <% end %>        
</div>
    
<style>
  .pokedex-container {
    display: flex;
    flex-wrap: wrap;
    gap: 16px;  Espa√ßamento entre as divs filhas 
  }

  .pokemon-card {
    border: 1px solid #ccc;
    border-radius: 8px;
    padding: 16px;
    text-align: center;
    width: 200px;  Largura fixa para cada card 
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  }

  .pokemon-card img {
    max-width: 100%;
    height: auto;
  }
</style>